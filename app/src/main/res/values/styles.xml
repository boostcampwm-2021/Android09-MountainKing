<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

    <style name="button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_bold</item>
    </style>

    <style name="body2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="body3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gmarket_sans_light</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.MountainKing</item>
        <item name="windowSplashScreenBackground">#8095FF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

</resources>